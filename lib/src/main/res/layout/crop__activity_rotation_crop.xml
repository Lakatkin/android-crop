<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	>

	<include
		android:id="@+id/done_cancel_bar"
		layout="@layout/crop__layout_done_cancel"
		/>

	<com.soundcloud.android.crop.CropImageViewWithRotation
		android:id="@+id/crop_image"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/crop__texture"
		android:layout_below="@id/done_cancel_bar"
		/>
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="10dp"
		>
		<ImageView
			android:id="@+id/crop_rotate_left_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="5dp"
			android:src="@drawable/crop_image_menu_rotate_left"
			android:layout_marginRight="10dp"
			/>
		<ImageView
			android:id="@+id/crop_rotate_right_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:padding="5dp"
			android:src="@drawable/crop_image_menu_rotate_right"
			/>
	</LinearLayout>
</RelativeLayout>